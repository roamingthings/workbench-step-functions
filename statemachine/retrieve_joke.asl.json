{
    "Comment": "A state machine that retrieves jokes and stores them in a job table.",
    "StartAt": "Retrieve Joke",
    "States": {
        "Retrieve Joke": {
            "Type": "Task",
            "Resource": "${RetrieveJokeFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 15,
                    "MaxAttempts": 5,
                    "BackoffRate": 1.5
                }
            ],
            "Next": "Update Job Details"
        },
        "Update Job Details": {
            "Type": "Task",
            "Resource": "${DDBPutJokesJob}",
            "Parameters": {
                "TableName": "${DDBTable}",
                "Item": {
                    "Id": {
                        "S.$": "$.id"
                    },
                    "Text": {
                        "S.$": "$.text"
                    },
                    "Timestamp": {
                        "S.$": "$.timestamp"
                    }
                }
            },
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 20,
                    "MaxAttempts": 5,
                    "BackoffRate": 10
                }
            ],
            "End": true
        }
    }
}